{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc-watch",
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "type": "shell",
            "isBackground": true,
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "type": "typescript",
            "label": "compileTs",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "copyViews",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "lib\\Views\\*",
                "dist\\views\\*",
                "/s",
                "/i",
                "/Y"
            ]
        },
        {
            "label": "copyPublic",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "public",
                "dist\\public",
                "/s",
                "/i",
                "/Y"
            ]
        },
        {
            "label": "build",
            "dependsOn": [
                "compileTs",
                "copyViews",
                "copyPublic"
            ]
        },
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": [],
            "label": "npm: lint",
            "detail": "eslint -c .eslintrc.js --ext .ts lib"
        }
    ]
}